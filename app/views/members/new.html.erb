<header>
  <%= link_to "Quizknock DB", root_path, class:"header-logo" %>
</header>
<div class="container">
  <div class="container-header">
    <h1>メンバー追加</h1>
  </div>
  <div class="item-form-wrapper">
    <%= form_for @member do |f| %>
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name %>
      <%= f.label :category, "カテゴリ", class: "form-label" %>
      <%= f.text_field :category %>
      <%= f.label :birthday, "誕生日", class: "form-label" %>
      <%= f.date_field :birthday %>
      <%= f.submit "保存" %>
    <% end %>
  </div>
  <%= link_to "もどる", root_path, class:"cancel-button" %>
</div>
